
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "STLink",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceRoot}/_bin/firmware.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "stutil",
      "runToEntryPoint": "Reset_Handler",
      "showDevDebugOutput": "both",
      "svdFile": "${workspaceRoot}/board/mcu/mal/CMSIS/STM32F40x.svd"
    },
    {
      "name": "JLink",
      "cwd": "${workspaceRoot}",
      "device": "STM32F401CC",
      "executable": "${workspaceRoot}/_bin/firmware.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "jlink",
      "runToEntryPoint": "Reset_Handler",
      "showDevDebugOutput": "both",
      "svdFile": "${workspaceRoot}/board/mcu/mal/CMSIS/STM32F40x.svd",
      "serverArgs": [
        "-select","USB",
        "-endian","little",
        "-speed","500",
        "-noir",
        "-settingsfile","${workspaceRoot}/board/mcu/jlink/debug.jlink"
],
    }
  ]
}